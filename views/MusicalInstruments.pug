extends layout

block content
  - let MusicalInstruments = results

  .container-fluid
    .row
      each item, index in MusicalInstruments
        .col-sm-4
          .instrument(onclick=`buy(${index})`)
            h3 #{item.instrument_name}
            p Condition: #{item.condition}
            p Price: #{item.price}
          .col-sm-2
            p Instrument Name: #{item.instrument_name}
            p Condition: #{item.condition}
            p Price: #{item.price}
          button.btn( class="btn-danger ml-1") Update
          button.btn( class="btn-info ml-1") Delete
          button.btn( class="btn-primary ml-1") inspect

  script.
    function buy(index) {
      alert("You purchased item " + index);
    }
